  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${maven-javadoc-plugin.version}</version>
        <configuration>
          <reportOutputDirectory>docs</reportOutputDirectory>
          <destDir>apidocs</destDir>
          <notimestamp>true</notimestamp>
